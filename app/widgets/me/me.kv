<Me>:
    username: ''
    nickname: ''
    phonenumber: ''
    address: ''
    orientation: "vertical"
    md_bg_color: app.primary_bg_color
    size_hint: (1, 1)
        

    MDTopAppBar:
        md_bg_color: app.navigator_bg_color
        title: 'Personal Center'
        theme_text_color: 'Custom'
        text_color: app.primary_font_color
        elevation: 0
        anchor_title: "center"
        specific_text_color: "black"
        size_hint: 1, .14
        title_font_style: app.font_size_lg 
        specific_text_color: "black"

    MDBoxLayout:
        orientation: "vertical"

        MDBoxLayout:
            orientation: "horizontal"

            MDLabel:
                text: "Hi! "+ root.nickname
                color: app.tertiary_text_color
                font_size: app.font_size_lg
                pos_hint: {'x': .5}
            
        

        MDLabel:
            text: "Username: "+root.username
            color: app.tertiary_text_color
            font_size: app.font_size_lg

        MDLabel:
            text: "Phone Number: "+root.phonenumber
            color: app.tertiary_text_color
            font_size: app.font_size_lg

        MDLabel:
            text: "Address: "+root.address
            color: app.tertiary_text_color
            font_size: app.font_size_lg

    MDBoxLayout:
        orientation:'horizontal'
        spacing: '10dp'
        padding: '15dp'
        size_hint_y: 0.1
        md_bg_color: app.navigator_bg_color

        MDRectangleFlatIconButton:
            text:'Update'
            icon: 'account'
            halign: 'center'
            text_color: 'white'
            icon_color: 1,1,1,1
            md_bg_color: 'blue'
            font_size: app.font_size_lg
            size_hint: 0.3, None
            #pos_hint: {'x':0,'y':0.1}
            on_press: app.switch_screen('update','left')

        MDRectangleFlatIconButton:
            text: 'Logout'
            icon: 'account'
            halign: 'center'
            text_color: 'white'
            icon_color: 1,1,1,1
            md_bg_color:'red'
            font_size: app.font_size_lg
            size_hint: 0.3, None
            #pos_hint: {'x':1,'y':0.1}
            on_press: app.switch_screen('login','left')     