<Me>:
    username: ''
    nickname: ''
    phonenumber: ''
    address: ''
    orientation: "vertical"
    md_bg_color: app.primary_bg_color
    size_hint: (1, 1)
        

    MDTopAppBar:
        md_bg_color: app.navigator_bg_color
        title: 'Personal Center'
        theme_text_color: 'Custom'
        text_color: app.primary_font_color
        elevation: 0
        anchor_title: "center"
        specific_text_color: "black"
        size_hint: 1, .14
        title_font_style: app.font_size_lg 
        specific_text_color: "black"

    MDBoxLayout:
        orientation: "vertical"
        padding: app.padding_md
        spacing: app.padding_md

        MDBoxLayout:
            orientation: "horizontal"
            size_hint: 1, None

            MDLabel:
                text: "Hi! "+ root.nickname
                color: app.tertiary_text_color
                font_size: app.font_size_lg
                height: self.texture_size[1]
                width: self.texture_size[0]

        MDLabel:
            text: "Username: "+root.username
            color: app.tertiary_text_color
            font_size: app.font_size_lg
            height: self.texture_size[1]

        MDLabel:
            text: "Phone Number: "+root.phonenumber
            color: app.tertiary_text_color
            font_size: app.font_size_lg
            height: self.texture_size[1]

        MDLabel:
            text: "Address: "+root.address
            color: app.tertiary_text_color
            font_size: app.font_size_lg
            height: self.texture_size[1]

    MDBoxLayout:
        orientation:'horizontal'
        spacing: '10dp'
        padding: '15dp'
        size_hint: 1, None
        height: self.minimum_height
        md_bg_color: app.primary_bg_color
        pos_hint: {'y': 0}

        MDRectangleFlatIconButton:
            text:'Update'
            icon: 'update'
            halign: 'center'
            text_color: 'white'
            icon_color: 1,1,1,1
            md_bg_color: 'blue'
            font_size: app.font_size_lg
            size_hint: 0.3, None
            on_press: app.switch_screen('update','left')

        MDRectangleFlatIconButton:
            text: 'Logout'
            icon: 'account'
            halign: 'center'
            text_color: 'white'
            icon_color: 1,1,1,1
            md_bg_color:'red'
            font_size: app.font_size_lg
            size_hint: 0.3, None
            on_press: root.logout()