#:import * mandel_layouts

<List>:
    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: app.main_bg_color

        MDTopAppBar:
            md_bg_color: app.header_bg_color
            padding: app.padding_md

            MDTextField:
                id: list_search
                mode: "round"
                size_hint: 0.8, None
                pos_hint: {"center_x": .5}
                fill_color_normal: app.main_bg_color
                hint_text_color_normal: app.placeholder_text_color
                text_color_normal: app.main_text_color
                on_text_validate: root.on_text_validate(list_search.text)

        MDBottomNavigation:
            MDBottomNavigationItem:
                name: "screen 1"

                ScrollView:
                    Column:
                        id: list_container
                        adaptive_height: True
                        spacing: dp(1)

                        ListItem:
                            title: 'This is title'
                            content: 'this is content'
                            Lead:
                                background_color: 1,.8,.8,1

                                ### Lead can store MDIcon, MDIconButton, and MDCheckbox only
                                MDIcon:
                                    icon: 'head'
                            Tail:
                                background_color: .8,.8,1,1 
                                size_hint_x: .5

                                ### Tail can store anything
                                MDLabel:
                                    text: 'This is tail'
                        ListItem:
                            padding: dp(10),0,0,0
                            title: 'Title only'
                        
                        ListItem:
                            padding: dp(10),0,0,0
                            title: 'Title and content'
                            content: 'This is the content!'

                        ListItem:
                            padding: dp(10),0,0,0
                            title: 'Clickable'
                            content: 'Click to print something'
                            on_press: root.dosomething(self, '(-_-)')

                        ListItem:
                            id: item_with_leading
                            title: 'With leading'
                            content: 'Widgets are listed horizontally in the leading area by default'
                            Lead:
                                MDIconButton:
                                    icon: 'pen'
                                    on_press: root.dosomething(item_with_leading, self.icon)
                                MDIconButton:
                                    icon: 'fingerprint'
                                    on_press: root.dosomething(item_with_leading, self.icon)
                        
                        ListItem:
                            id: item_with_tailing
                            padding: dp(10),0,0,0
                            height: dp(100)
                            title: 'With tailing'
                            content: 'Widgets are listed vertically in the tailing area by default'

                            Tail:
                                MDIconButton:
                                    icon: 'pen'
                                    on_press: root.dosomething(item_with_tailing, self.icon)
                                MDIconButton:
                                    icon: 'fingerprint'
                                    on_press: root.dosomething(item_with_tailing, self.icon)

                        ListItem:
                            id: dark_mode_item
                            mode: 'dark'
                            title: 'Dark mode'
                            content: 'Dark mode overrides the color settings of descendants'
                            Lead:
                                MDIconButton:
                                    icon: 'fingerprint'
                                    on_press: root.dosomething(dark_mode_item, self.icon)
                            Tail:
                                padding: dp(10)
                                size_hint_x: 0.2
                                MDLabel:
                                    text: 'Hello'
                                MDLabel:
                                    text: 'World'

                        ListItem:
                            padding: dp(10),0,0,0
                            background_color: .8,1,.8,1
                            title_custom_style: { 'color': (1,0,0,1), 'bold': True }
                            content_custom_style: { 'color': (0,0,1,1), 'italic': True }
                            title: 'Custom item'
                            content: 'with custom background color, title style, and content style'

                        ListItem:
                            padding: dp(10),0,0,0
                            background_color: .8,1,.8,1
                            title_custom_style: { 'color': (1,0,0,1), 'bold': True }
                            content_custom_style: { 'color': (0,0,1,1), 'italic': True }
                            title: 'Custom item'
                            content: 'with custom background color, title style, and content style'

                        ListItem:
                            padding: dp(10),0,0,0
                            background_color: .8,1,.8,1
                            title_custom_style: { 'color': (1,0,0,1), 'bold': True }
                            content_custom_style: { 'color': (0,0,1,1), 'italic': True }
                            title: 'Custom item'
                            content: 'with custom background color, title style, and content style'

                        ListItem:
                            padding: dp(10),0,0,0
                            background_color: .8,1,.8,1
                            title_custom_style: { 'color': (1,0,0,1), 'bold': True }
                            content_custom_style: { 'color': (0,0,1,1), 'italic': True }
                            title: 'Custom item'
                            content: 'with custom background color, title style, and content style'

            MDBottomNavigationItem:
                name: "screen 2"

                MDLabel:
                    text: "Content2"
                    halign: "center"

            MDBottomNavigationItem:
                name: "screen 3"

                MDLabel:
                    text: "Content3"
                    halign: "center"

            MDBottomNavigationItem:
                name: "screen 4"

                MDLabel:
                    text: "Content4"
                    halign: "center"