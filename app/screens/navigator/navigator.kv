#:import * app.widgets

<Navigator>:
    on_enter: 
        cart.initiation()
        me.initiation()
        navigator.switch_tab('screen 2')
    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: app.primary_bg_color

        MDBottomNavigation:
            id: navigator

            MDBottomNavigationItem:
                name: "screen 1"
                icon: 'cart-outline'
                on_enter: cart.initiation()
                on_leave: cart.clear()

                Cart:
                    id: cart

            MDBottomNavigationItem:
                name: "screen 2"
                icon: 'arch'
                on_enter: list.initiation()
                on_leave: list.clear()
                
                List:
                    id: list

            MDBottomNavigationItem:
                name: "screen 3"
                icon: 'account'
                on_enter: me.initiation()

                Me:
                    id: me