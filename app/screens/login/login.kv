<Login>:
    BoxLayout:
        orientation: 'vertical'
        spacing:'10dp' 

        MDTopAppBar:
            title:"Login"
            md_bg_color: app.header_bg_color
            padding: app.padding_md

        BoxLayout:
            orientation: 'vertical'
            spacing:'30dp'
            padding:'20dp'

            MDLabel:
                text:'Username'
                font_size:app.font_size_lg
                halign:'left'
                size_hint:1,None

            MDTextField:
                id:text_username
                hint_text: "Username"
                helper_text: "Please input your username"
                helper_text_mode: "persistent"
                mode:"round"
                
            MDLabel:
                text:'Password'
                halign:'left'
                size_hint:1,None

            MDTextField:
                id:text_password
                hint_text: "Password"
                helper_text: "Please input your password"
                helper_text_mode: "persistent"
                mode:"round"
                size_hint:1,None
            BoxLayout:
                orientation: 'horizontal'
                spacing:'30dp'
                padding:'20dp'

                MDFillRoundFlatButton:
                    text:'Login'
                    halign:'center'
                    text_color: app.main_btn_font_color
                    md_bg_color:'green'
                    font_size:'20dp'
                    size_hint:1,None
                    pos_hint:{'x':0,'y':0.8}
                    on_press:app.switch_screen('navigator','left')

                MDFillRoundFlatButton:
                    text: 'Register'
                    halign:'center'
                    text_color: 'white'
                    md_bg_color:'blue'
                    font_size:'20dp'
                    size_hint:1,None
                    pos_hint:{'x':1,'y':0.8}
                    on_press:app.switch_screen('register','left')

