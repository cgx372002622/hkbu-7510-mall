<Login>:
    BoxLayout:
        orientation: 'vertical'
        spacing:'10dp' 

        MDTopAppBar:
            title:"Login"
            md_bg_color: app.header_bg_color
            padding: app.padding_md

        BoxLayout:
            orientation: 'vertical'
            spacing:'20dp'
            padding:'15dp'

            Image:
                size_hint: None,None
                size: '120dp','120dp'
                pos_hint:{'center_x':0.5,'center_y':0.5}
                source: 'app/resources/Me.png'

            MDTextField:
                id: text_username
                hint_text: "Username"
                size_hint: 1,None
                helper_text: "Please input your username"
                helper_text_mode: "persistent"
                border_color: app.border_color
                icon_right: 'user'
                mode: "rectangle"

            #ContentTextField:
                #id: text_username
                #icon_right: 'Me.png'
                #hint_text: "Enter your username"
                #helper_text: "Please input your password"
                #helper_text_mode: "persistent"    

            ClickableTextFieldRound:
                id: text_password
                size_hint:1,None
                hint_text: 'Enter your password'

            #MDTextField:
                #id: text_password
                #hint_text: "Password"
                #helper_text: "Please input your password"
                #helper_text_mode: "persistent"
                #mode: "rectangle"
                #size_hint: 1,None
                #password: True

            BoxLayout:
                orientation: 'horizontal'
                spacing: '30dp'
                padding: '20dp'

                MDFillRoundFlatButton:
                    text: 'Login'
                    halign: 'center'
                    text_color: app.main_btn_font_color
                    md_bg_color: 'green'
                    font_size: '20dp'
                    size_hint: 1,None
                    pos_hint: {'x':0,'y':0.8}
                    #on_press: app.switch_screen('navigator','left')
                    on_press: root.login_vertify()

                MDFillRoundFlatButton:
                    text: 'Register'
                    halign: 'center'
                    text_color: 'white'
                    md_bg_color: 'blue'
                    font_size: '20dp'
                    size_hint: 1,None
                    pos_hint: {'x':1,'y':0.8}
                    on_press: app.switch_screen('register','left')


<ContentTextField@MDTextField>:
    font_size:" 14pt"
    mode: "rectangle"
    text_color_normal: "#000000"
    text_color_focus: "#000000"
    hint_text_color_normal: "#808080"
    hint_text_color_focus: "#000000"
    icon_right_color_normal: 
    icon_right_color_focus: "6173f3"
    fill_color_normal: 0, 0, 0, 0
    fill_color_focus: 0, 0, 0, 0
    line_color: "#f0f0f0"
    line_color_foncus: "#7283f5"




<ClickableTextFieldRound>:
    size_hint_y: None
    height: text_field.height

    MDTextField:
        id: text_field
        text: root.text
        hint_text: "password"
        password: True
        icon_left: "key-variant"
        mode: 'rectangle'
        helper_text: "Please input your password"
        helper_text_mode: "persistent"

    MDIconButton:
        icon: "eye-off"
        pos_hint: {"center_y": .4}
        pos: text_field.width - self.width + dp(8), 0
        theme_text_color: "Hint"
        on_release:
            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
            text_field.password = False if text_field.password is True else True

<MyPopup@Popup>:
    title: 'Login Success'
    size_hint: None, None
    size: 200, 150
    auto_dismiss: True
    on_open: root.dismiss_after_timeout()

    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Login success'

