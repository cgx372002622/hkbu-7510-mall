<Login>:
    BoxLayout:
        orientation: 'vertical'
        spacing:'10dp' 

        MDTopAppBar:
            title:"Login"
            md_bg_color: app.header_bg_color
            padding: app.padding_md

        BoxLayout:
            orientation: 'vertical'
            spacing:'20dp'
            padding:'15dp'

            Image:
                size_hint: None,None
                size: '120dp','120dp'
                pos_hint:{'center_x':0.5,'center_y':0.5}
                source: 'app/resources/Me.png'


            MDTextField:
                id: text_username
                hint_text: "Username"
                size_hint: 1,None
                helper_text: "Please input your username"
                helper_text_mode: "persistent"
                border_color: app.border_color
                icon_right: 'app/resources/lock.png'
                mode: "rectangle"
                
                
            MDTextField:
                id: text_password
                hint_text: "Password"
                helper_text: "Please input your password"
                helper_text_mode: "persistent"
                mode: "rectangle"
                size_hint: 1,None
                password: True

            BoxLayout:
                orientation: 'horizontal'
                spacing: '30dp'
                padding: '20dp'

                MDFillRoundFlatButton:
                    text: 'Login'
                    halign: 'center'
                    text_color: app.main_btn_font_color
                    md_bg_color: 'green'
                    font_size: '20dp'
                    size_hint: 1,None
                    pos_hint: {'x':0,'y':0.8}
                    on_press: app.switch_screen('navigator','left')

                MDFillRoundFlatButton:
                    text: 'Register'
                    halign: 'center'
                    text_color: 'white'
                    md_bg_color: 'blue'
                    font_size: '20dp'
                    size_hint: 1,None
                    pos_hint: {'x':1,'y':0.8}
                    on_press: app.switch_screen('register','left')

