<Register>:
    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: app.primary_bg_color
        spacing: '10dp'  #只能在父类设置
        padding: '0dp','0dp','0dp','0dp'    #左上右下
        size_hint_y: 1    
        #MDTopAppBar:
            #title:"Register"
            #font_color: '#4994ec'
            #md_bg_color: app.navigator_bg_color
            #padding: app.padding_md
            #size_hint:1,None
            #elevation: 0
            #left_action_items:[["arrow-left-bold-circle", lambda x:app.switch_screen('login','left')]]

        MDBoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.1
            canvas.before:
                Color:
                    rgba: 0.29, 0.58, 0.93, 1 # 设置背景颜色蓝色
                Rectangle:
                    pos: self.pos
                    size: self.size
            MDLabel:
                text: 'Sign up'
                halign: 'center'
                valign: 'center'
                size_hint: 1, 0.1
                font_name: 'app/resources/Disko-1.ttf'
                font_size: '50dp'



        MDBoxLayout:
            orientation: "vertical" 
            spacing: '30dp'
            padding: '10dp','10dp','10dp','10dp'
            size_hint_y: 0.6
            #md_bg_color: "#5bc0f6"

            #Image:
                #size_hint: None,None
                #size: '120dp','120dp'
                #pos_hint:{'center_x':0.5,'center_y':0.5}
                #source: 'app/resources/Me.png'

            MDTextField:
                id: text_username
                hint_text: "Username"
                helper_text: "Please input your username max length 16"
                helper_text_mode: "persistent"
                mode: "rectangle"
                max_text_length: 16
                icon_left: 'account'
                #fill_color_normal: app.primary_bg_color
                #hint_text_color_normal: app.placeholder_text_color
                multiline: False

            ClickableTextFieldRound1:
                id:text_password
                hint_text: "Password"
                helper_text: "Please input your password"
                helper_text_mode: "persistent"
                mode: "rectangle"
                password: True
                size_hint: 1,None

            ClickableTextFieldRound2:           #密码二次确认组件
                id: text_confirm_password
                #hint_text: "Confirm your Password"
                #helper_text: "Please input your password again"
                helper_text_mode: "persistent"
                mode: "rectangle"
                password: True
                size_hint: 1,None

            MDTextField:
                id:text_nickname
                hint_text: "Nickname"
                helper_text: "Please input your nickname"
                helper_text_mode: "persistent"
                mode:"rectangle"
                size_hint:1,None
                icon_left: 'account'

            MDTextField:
                id:text_phoneNumber
                hint_text: "Phone number"
                helper_text: "Please input your phone number max length 11"
                helper_text_mode: "persistent"
                mode:"rectangle"
                size_hint:1,None
                max_text_length: 11
                icon_left: 'phone'

            MDTextField:
                id:text_address
                hint_text: "Address"
                helper_text: "Please input your address"
                helper_text_mode: "persistent"
                mode:"rectangle"
                size_hint:1,None
                icon_left: 'map-marker'

        MDBoxLayout:
            orientation:'horizontal'
            spacing: '10dp'
            padding: '10dp','10dp','10dp','10dp'
            size_hint_y: 0.1
            #md_bg_color: app.navigator_bg_color

            MDRectangleFlatIconButton:
                text:'Sign up'
                icon: 'account'
                halign: 'center'
                text_color: 'white'
                icon_color: 1,1,1,1
                md_bg_color: 'green'
                font_size: app.font_size
                size_hint: 0.3, None
                on_press: root.submit_data()

            MDRectangleFlatIconButton:
                text: 'Clean'
                icon: 'delete'
                halign: 'center'
                text_color: 'white'
                icon_color: 1,1,1,1
                md_bg_color:'red'
                font_size: app.font_size
                size_hint: 0.3, None
                on_press: root.cancel()

            MDRectangleFlatIconButton:
                text: 'Back'
                icon: "arrow-left-bold-circle"
                halign: 'center'
                text_color: 'white'
                icon_color: 1,1,1,1
                md_bg_color:'red'
                font_size: app.font_size
                size_hint: 0.3, None
                on_press: app.switch_screen('login','right')


<ContentTextField@MDTextField>:
    font_size:" 14pt"
    mode: "rectangle"
    text_color_normal: "#000000"
    text_color_focus: "#000000"
    hint_text_color_normal: "#808080"
    hint_text_color_focus: "#000000"
    icon_right_color_normal: 
    icon_right_color_focus: "6173f3"
    fill_color_normal: 0, 0, 0, 0
    fill_color_focus: 0, 0, 0, 0
    line_color: "#f0f0f0"
    line_color_foncus: "#7283f5"

<ClickableTextFieldRound2>:
    size_hint_y: None
    height: text_field.height

    MDTextField:
        id: text_field
        text: root.text
        hint_text: "Confirm your password"
        password: True
        icon_left: "key-variant"
        mode: 'rectangle'
        helper_text: "Please input your password again"
        helper_text_mode: "persistent"

    MDIconButton:
        icon: "eye-off"
        pos_hint: {"center_y": .4}
        pos: text_field.width - self.width + dp(8), 0
        theme_text_color: "Hint"
        on_release:
            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
            text_field.password = False if text_field.password is True else True


