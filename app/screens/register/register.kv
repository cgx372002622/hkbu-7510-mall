<Register>:

    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: app.main_bg_color
        spacing:'10dp'  #只能在父类设置
        spacing:'15dp'

        MDTopAppBar:
            title:"Register"
            md_bg_color: app.header_bg_color
            padding: app.padding_md
            size_hint:1,None
            left_action_items:[["arrow-left", lambda x:app.switch_screen('login','left')]]

        MDBoxLayout:
            orientation: "vertical" 
            spacing:'20dp'
            padding:'20dp'
            size_hint_y: 0.6

            Image:
                size_hint: None,None
                size: '120dp','120dp'
                pos_hint:{'center_x':0.5,'center_y':0.5}
                source: 'app/resources/Me.png'

            MDTextField:
                id: text_username
                hint_text: "Username"
                #size_hint: 1, None
                helper_text: "Please input your username max length 8"
                helper_text_mode: "persistent"
                mode: "rectangle"
                max_text_length: 8
                icon_left: 'account'
                #fill_color_normal: app.main_bg_color
                #hint_text_color_normal: app.placeholder_text_color

            ClickableTextFieldRound:
                id:text_password
                hint_text: "Password"
                helper_text: "Please input your password"
                helper_text_mode: "persistent"
                mode:"rectangle"
                password: True
                size_hint:1,None

            ClickableTextFieldRound:
                id:text_confirm_password
                hint_text: "Confirm your Password"
                helper_text: "Please input your password again"
                helper_text_mode: "persistent"
                mode:"rectangle"
                password: True
                size_hint:1,None

            MDTextField:
                id:text_nickname
                hint_text: "Nickname"
                helper_text: "Please input your nickname"
                helper_text_mode: "persistent"
                mode:"rectangle"
                size_hint:1,None
                icon_left: 'account'

            MDTextField:
                id:text_phoneNumber
                hint_text: "Phone number"
                helper_text: "Please input your phone number max length 8"
                helper_text_mode: "persistent"
                mode:"rectangle"
                size_hint:1,None
                max_text_length: 8
                icon_left: 'phone'

            MDTextField:
                id:text_address
                hint_text: "Address"
                helper_text: "Please input your address"
                helper_text_mode: "persistent"
                mode:"rectangle"
                size_hint:1,None
                icon_left: 'map-marker'

            MDBoxLayout:
                orientation:'horizontal'
                spacing:'10dp'
                padding:'20dp'
                size_hint_y: 0.2

                MDFillRoundFlatButton:
                    text:'Sign up'
                    halign:'center'
                    text_color: 'white'
                    md_bg_color:'green'
                    font_size: app.font_size_lg
                    size_hint: 1,None
                    pos_hint: {'x':0,'y':0.3}
                    #on_press: root.register()
                    on_release: root.submit_data()

                MDFillRoundFlatButton:
                    text:'Cancel'
                    halign:'center'
                    text_color: 'white'
                    md_bg_color:'green'
                    font_size:app.font_size_lg
                    size_hint:1,None
                    pos_hint:{'x':1,'y':0.3}
                    on_press:root.cancel()


<ContentTextField@MDTextField>:
    font_size:" 14pt"
    mode: "rectangle"
    text_color_normal: "#000000"
    text_color_focus: "#000000"
    hint_text_color_normal: "#808080"
    hint_text_color_focus: "#000000"
    icon_right_color_normal: 
    icon_right_color_focus: "6173f3"
    fill_color_normal: 0, 0, 0, 0
    fill_color_focus: 0, 0, 0, 0
    line_color: "#f0f0f0"
    line_color_foncus: "#7283f5"